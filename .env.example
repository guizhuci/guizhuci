# 桂职测助手 - 环境变量配置示例
# 复制此文件为 .env.local，并修改为实际值

# 数据库连接字符串（必填）
# 格式：postgresql://用户名:密码@主机:端口/数据库名
DATABASE_URL=postgresql://postgres:password@localhost:5432/gzctest

# 应用名称（可选）
NEXT_PUBLIC_APP_NAME=桂职测助手

# 应用描述（可选）
NEXT_PUBLIC_APP_DESCRIPTION=广西单招刷题神器

# Node.js 环境（生产环境设置为 production）
NODE_ENV=development

# 日志级别（开发环境：debug, 生产环境：info）
LOG_LEVEL=debug

# API 超时时间（毫秒）
API_TIMEOUT=10000

# 数据库连接池配置（可选）
DB_POOL_MIN=2
DB_POOL_MAX=10

# 文件上传大小限制（字节，默认 10MB）
MAX_FILE_SIZE=10485760

# VIP码默认过期天数
VIP_DEFAULT_DAYS=30

# 每日免费刷题数量限制
DAILY_FREE_LIMIT=5

# 专项练习免费题目数量限制
PRACTICE_FREE_LIMIT=9

# 管理员账号（默认）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# 客服微信号（用于前端展示）
NEXT_PUBLIC_CUSTOMER_SERVICE_WECHAT=your_wechat_id

# 客服邮箱（可选）
CUSTOMER_SERVICE_EMAIL=support@example.com

# 客服电话（可选）
CUSTOMER_SERVICE_PHONE=13800138000

# 微信小程序 AppID（可选，用于微信登录）
WECHAT_MINI_APP_ID=

# 微信小程序 AppSecret（可选，用于微信登录）
WECHAT_MINI_APP_SECRET=

# 域名（可选，用于邮件通知等）
NEXT_PUBLIC_DOMAIN=https://your-domain.com

# 版本号
NEXT_PUBLIC_VERSION=1.0.0
